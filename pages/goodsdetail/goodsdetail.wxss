page {
  background: #f5f5f5;
}

/*总体主盒子*/

.container {
  display: flex;
  flex-flow: column;
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

/*左侧栏主盒子*/

.nav_left {
  position: absolute;
  top: 0;
  left: 0;
  /*设置行内块级元素（没使用定位）*/
  display: inline-block;
  width: 25%;
  height: 100%;
  /*主盒子设置背景色为灰色*/
  background: #f5f5f5;
  text-align: center;
}

/*左侧栏list的item*/

.nav_left .nav_left_items {
  /*每个高30px*/
  height: 20px;
  /*垂直居中*/
  line-height: 20px;
  /*再设上下padding增加高度，总高42px*/
  text-align: center;
  padding: 10rpx;
  /*文字14px*/
  font-size: 14px;
}

/*左侧栏list的item被选中时*/

.nav_left .nav_left_items.active {
  /*背景色变成白色*/
  background: #fff;
  color: #f0145a;
}

/*右侧栏主盒子*/

.nav_right {
  /*右侧盒子使用了绝对定位*/
  position: fixed;
  top: 0;
  right: 0;
  flex: 1;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 75%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  background: #f2f2f2;
}

.scroll {
  white-space: nowrap;
  width: 100%;
  height: 85%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.right-title {
  display: inline-block;
  overflow: hidden;
  margin-bottom: 10rpx;
  color: black;
  font-size: 30rpx;
}

.right-view {
  display: flex;
  flex-flow: column;
}

.right-bottom-view {
  margin-left: 30rpx;
  margin-top: 20rpx;
  display: flex;
  flex-flow: row;
}

.item-price {
  font-size: 30rpx;
  color: red;
  float: left;
}

/*右侧栏list的item*/

.nav_right .nav_right_items {
  background: #fff;
  padding: 10rpx;
  overflow: hidden;
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 100%;
  height: 100%;
  margin-bottom: 15rpx;
}

.item-img {
  float: left;
  /*被图片设置宽高*/
  width: 60px;
  height: 60px;
}

.item-name {
  float: left;
  margin-left: 20px;
  /*给text设成块级元素*/
  display: block;
  font-size: 30rpx;
  color: black;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nodata_text {
  color: black;
  font-size: 14px;
  text-align: center;
}

.bright_view_hide {
  display: none;
}

.bright_view_show {
  display: block;
}

.bright_guiwei_hide {
  display: none;
}

.bright_guiwei_show {
  display: block;
}
.nav-bottom {
  display: flex;
  flex-flow: row;
  margin-top: 10px;
  position: fixed;
  width: 100%;
