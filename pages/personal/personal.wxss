  display: flex;
  flex-flow: row;
  height: 100%;
  background: #fc9949;
}

.person-head{
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border: 0 #00000000 solid;
  border-radius: 100%;
}

.person-top-right{
  justify-content: center;
  display: flex;
  flex-flow: column;
}

.person-name{
  color: white;
  margin-bottom: 14rpx;
}

.person-vip{
  color: white;
}

.person-line{
  margin-top: 20rpx;
  padding:30rpx;
  background: white
}
.myorder{
  font-size: 40rpx;
}

.line{
  background: white;
  padding-top:20rpx;
  padding-bottom:20rpx;
