page {
  background: #f2f2f2;
}

.cart-box .item {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
}

.cart-box .item .icon {
  margin: auto;
}

.cart-box .item .goods-info {
  width: 50%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.cart-box .goods-img {
  width: 160rpx;
  margin-left: 20rpx;
}

.cart-box .row {
  display: flex;
  flex-direction: column;
}

.cart-box .goods-name {
  font-size: 32rpx;
}

.cart-box .goods-price {
  font-size: 32rpx;
  color: black;
}

.cart-box .goods-type {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.right-num {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  width: 30%;
}

.cart-box .num-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.cart-box .goods-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
  font-weight: bold;
  color: #999;
  margin: 0;
  background: #fff;
}

.cart-box .num {
  color: #999;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}

.cart-box .btn-add {
  font-size: 50rpx;
}

.cart-box .btn-minus {
  font-size: 28rpx;
}

.cart-box .btn-groups {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border: 1px solid #fff;
  border-radius: 10rpx;
}

.cart-fixbar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
  position: fixed;
  width: 100%;
  height: 8%;
  bottom: 0px;
  background-color: white;
}

.cart-fixbar .delete {
  width: 30%;
  font-size: 32rpx;
}

.cart-fixbar .allSelect {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}

.cart-fixbar .allSelect-text {
  margin-left: 20rpx;
}

.cart-fixbar .allSelect .allicon {
  margin: 20rpx;
}

.cart-fixbar .count {
  width: 30%;
  color: #222;
  font-size: 36rpx;
}

.cart-fixbar .order {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  height: 100%;
  background: red;
  font-size: 32rpx;
}

.cart-fixbar .allnum {
  font-size: 24rpx;
}
