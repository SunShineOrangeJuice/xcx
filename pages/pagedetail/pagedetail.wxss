page {
  background: #f2f2f2;
}

swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.line-detail {
  margin-top: 10rpx;
  background: white;
  width: 100%;
  height: 100%;
  padding: 30rpx;
}

.name-detail {
  font-size: 40rpx;
  color: black;
}

.kind-detail {
  display: position;
  width: 100%;
  height: 100%;
}

.kind-text {
  font-size: 35rpx;
  color: black;
}

.share-text {
  margin-right: 40rpx;
  font-size: 35rpx;
  color: red;
  float: right;
}

.price-detail {
  display: flex;
  flex-flow: row;
  margin-top: 20rpx;
  width: 100%;
  height: 100%;
}

.price-text {
  float: left;
  width: 33%;
  height: 100%;
  color: red;
  font-size: 35rpx;
}

.num-text {
  float: left;
  text-align: center;
  height: 100%;
  width: 33%;
  color: gray;
  font-size: 30rpx;
}

.place-text {
  margin-right: 40rpx;
  float: right;
  text-align: right;
  height: 100%;
  width: 33%;
  color: gray;
  font-size: 30rpx;
}

.btn-choice {
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: white;
  padding: 20rpx;
  margin-top: 20rpx;
}

.choice-text {
  float: left;
  color: black;
  font-size: 36rpx;
}

.size-text {
  margin-top: 3rpx;
  margin-left: 30rpx;
  float: left;
  color: grey;
  font-size: 30rpx;
}

.detail-bottom-box {
  width: 100%;
  height: 100%;
}

.tabs-item.selected {
  color: rgba(171, 149, 109, 0.8);
  border-bottom: 2px solid rgba(171, 149, 109, 0.8);
}

.tabs-item {
  width: 33.3%;
  color: #c7c7cb;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #d0d0d7;
}

.navbar {
  margin-top: 20rpx;
  background: white;
  display: flex;
  position: absolute;
  z-index: 500;
  width: 100%;
}

.navbar__item {
  position: relative;
  display: block;
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 0;
  height: 48rpx;
  line-height: 48rpx;
}

.navbar__item_on {
  color: red;
}

.navbar__slider {
  position: absolute;
  display: block;
  content: " ";
  left: 0;
  bottom: 0;
  height: 3px;
  background-color: red;
  transition: transform 0.3s;
}

.navbar__title {
  display: inline-block;
  font-size: 30rpx;
  max-width: 8em;
  text-align: center;
}

.tab-swiper {
  margin-bottom: 120rpx;
  
  background: burlywood;
  position: absolute;
  margin-top: 120rpx;
  height: 100%;
}

.tab-item {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  text-align: center;
}

.nav-bottom {
  display: flex;
  flex-flow: row;
  margin-top: 10px;
  position: fixed;
  width: 100%;
  height: 8%;
  bottom: 0px;
  background-color: white;
}



.nav-right-bottom {
  display: flex;
  flex-flow: row;
  height: 100%;
  width: 50%;
}



.add-shopcart {
  background: skyblue;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  width: 50%;
  height: 100%;
}

.buy-immidiately {
  display: flex;
  align-items: center;
  justify-content: center;
  background: red;
  color: white;
  font-size: 28rpx;
  width: 50%;
  height: 100%;
}
.nav-left-bottom {
  height: 100%;
  width: 50%;
  
}

.left-item {
  margin-top: -12rpx;
  display: flex;
  flex-flow: column;
  text-align: center;
  float: left;
  width: 33%;
  height: 100%;
}

.img {
  margin: auto;
  width: 50rpx;
  height: 50rpx;
}
.text {
  margin-top: -20rpx;
  font-size: 25rpx;
  text-align: center;
}
